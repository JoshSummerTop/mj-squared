<div id="flash" data-turbo-temporary>
  <% if notice %>
    <div class="fixed top-4 right-4 z-50 max-w-sm w-full" 
         data-controller="flash" 
         style="transition: all 0.3s ease-in-out;">
      <div class="bg-green-50 border border-green-200 text-green-800 p-4 rounded-lg shadow-lg">
        <div class="flex items-center justify-between">
          <p class="text-sm font-medium"><%= sanitize notice %></p>
          <button class="ml-4 text-lg leading-none hover:opacity-70 transition-opacity" 
                  data-action="click->flash#dismiss">
            ×
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div class="fixed top-4 right-4 z-50 max-w-sm w-full" 
         data-controller="flash" 
         style="transition: all 0.3s ease-in-out;">
      <div class="bg-red-50 border border-red-200 text-red-800 p-4 rounded-lg shadow-lg">
        <div class="flex items-center justify-between">
          <p class="text-sm font-medium"><%= sanitize alert %></p>
          <button class="ml-4 text-lg leading-none hover:opacity-70 transition-opacity" 
                  data-action="click->flash#dismiss">
            ×
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="toasts" data-turbo-temporary>
  <% toasts.each do |_, toast| %>
    <%= render ToastComponent.new(toast) %>
  <% end %>
</div>
