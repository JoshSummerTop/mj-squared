<nav class="flex flex-wrap items-center justify-between px-4 py-2 bg-primary-600 dark:bg-primary-700 border-b border-primary-700 dark:border-primary-800 text-sm font-medium text-white" data-controller="toggle">
  <div class="flex items-center flex-shrink-0 mr-6">
    <%= link_to root_path, class: "flex items-center text-white hover:text-primary-100 transition-colors duration-200" do %>
      <%= image_tag "logo.png", alt: Jumpstart.config.application_name, class: "h-8 w-auto" %>
      <span class="sr-only"><%= Jumpstart.config.application_name %></span>
    <% end %>
  </div>
  <div class="block lg:hidden">
    <button type="button" id="sidebar-open" class="flex items-center p-3 text-white hover:text-primary-100 lg:hidden focus:outline-none focus:text-primary-100 transition-colors duration-200" data-action="click->toggle#toggle touch->toggle#toggle">
      <svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path></svg>
    </button>
  </div>
  <div class="flex-grow hidden w-full pb-6 lg:flex lg:w-auto lg:pb-0"
        data-toggle-target="toggleable"
        data-transition-enter="transition-all ease-linear duration-300"
        data-transition-enter-from="opacity-0 h-0"
        data-transition-enter-to="opacity-100"
        data-transition-leave="transition-all ease-linear duration-300"
        data-transition-leave-from="opacity-100"
        data-transition-leave-to="opacity-0">
    <div class="lg:flex-grow flex items-center">
      <%= render "left_nav" %>
    </div>
    <div class="flex items-center space-x-4">
      <%= render "right_nav" %>
      <% if user_signed_in? %>
        <%# Notification bell hidden - was: render "notifications" %>
        <div class="hidden lg:inline-flex items-center">
          <%= render "user_menu" %>
        </div>
      <% end %>
    </div>
  </div>
</nav>
