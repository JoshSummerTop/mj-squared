<div class="p-4 mt-6 border border-gray-200 rounded-lg">
  <%= form_with model: [post, comment], local: false, class: "space-y-3" do |f| %>
    <div class="flex items-start space-x-3">
      <!-- Current user's avatar -->
      <% if user_signed_in? %>
        <%= user_avatar_tag(current_user, size: 40, css_class: "w-10 h-10 rounded-full flex-shrink-0 shadow-sm") %>
      <% end %>
      
      <div class="flex-1 min-w-0">
        <%= f.text_area :content, 
            placeholder: 'Share your thoughts about this post...', 
            class: 'w-full px-3 py-2 border-0 bg-transparent text-gray-900 placeholder-gray-500 resize-none focus:outline-none text-sm',
            rows: 3,
            required: true %>
      </div>
    </div>
    
    <div class="flex justify-between items-center pt-2">
      <div class="text-xs text-gray-400 flex items-center">
        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <% if comment.persisted? %>
          <span>Editing your comment</span>
        <% else %>
          <span>Share your thoughts</span>
        <% end %>
      </div>
      
      <div class="flex gap-2">
        <% if comment.persisted? %>
          <%= link_to 'Cancel', post_path(post), class: 'px-3 py-1 text-xs font-medium text-gray-600 bg-white bg-opacity-50 rounded-full hover:bg-gray-50 transition-colors duration-200' %>
          <%= f.submit 'Update', class: 'px-4 py-1 text-xs font-semibold text-white bg-primary-600 rounded-full hover:bg-primary-700 transition-colors duration-200', data: { disable_with: 'Updating...' } %>
        <% else %>
          <%= f.submit 'Post Comment', class: 'px-4 py-1 text-xs font-semibold text-white bg-primary-600 rounded-full hover:bg-primary-700 transition-colors duration-200', data: { disable_with: 'Posting...' } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
