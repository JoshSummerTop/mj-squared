<%= turbo_stream.prepend "comments" do %>
  <%= render partial: "posts/comment", locals: { comment: @comment } %>
<% end %>

<%= turbo_stream.update "comment_form" do %>
  <%= render partial: "comments/form", locals: { post: @post, comment: Comment.new } %>
<% end %>

<%= turbo_stream.update "flash" do %>
  <div class="fixed top-4 right-4 z-50 max-w-sm w-full"
       data-controller="flash"
       style="transition: all 0.3s ease-in-out;">
    <div class="bg-green-50 border border-green-200 text-green-800 p-4 rounded-lg shadow-lg">
      <div class="flex items-center justify-between">
        <p class="text-sm font-medium">Comment added successfully!</p>
        <button class="ml-4 text-lg leading-none hover:opacity-70 transition-opacity"
                data-action="click->flash#dismiss">
          Ã—
        </button>
      </div>
    </div>
  </div>
<% end %>
