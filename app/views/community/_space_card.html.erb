<%# Reusable space card component for consistent rendering %>
<div class="community-card-custom w-full h-64 group hover:scale-105 transition-transform duration-200">
  <div class="community-card-inner h-full">
    <div class="relative community-card-img-wrapper">
      <% if space.image.attached? %>
        <%= image_tag space.image, 
                     class: 'community-card-img', 
                     width: 104, 
                     height: 104, 
                     loading: 'lazy',
                     alt: "#{space.title} space image" %>
      <% else %>
        <%= image_tag 'community_placeholder.jpg', 
                     class: 'community-card-img', 
                     width: 104, 
                     height: 104, 
                     loading: 'lazy',
                     alt: "Default space placeholder" %>
      <% end %>
    </div>
    
    <div class="community-card-content flex-1 p-4">
      <h3 class="text-lg font-semibold mb-2 line-clamp-1">
        <%= link_to truncate(space.title, length: 25), 
                   space_path(space), 
                   class: "text-gray-900 hover:text-gray-700 transition-colors",
                   data: { turbo_frame: "_top" } %>
      </h3>
      
      <% if space.community_categories.any? %>
        <div class="flex flex-wrap gap-1 mb-2">
          <% space.community_categories.limit(2).each do |category| %>
            <span class="px-2 py-0.5 bg-primary-100 text-primary-800 text-xs rounded-full font-medium">
              <%= category.name %>
            </span>
          <% end %>
          <% if space.community_categories.count > 2 %>
            <span class="px-2 py-0.5 bg-gray-100 text-gray-600 text-xs rounded-full font-medium">
              +<%= space.community_categories.count - 2 %>
            </span>
          <% end %>
        </div>
      <% end %>
      
      <% if space.age_group_categories.any? %>
        <div class="flex flex-wrap gap-1 mb-3">
          <% space.age_group_categories.limit(2).each do |age_group| %>
            <span class="px-2 py-0.5 bg-orange-100 text-orange-800 text-xs rounded-full font-medium">
              <%= age_group.name %>
            </span>
          <% end %>
          <% if space.age_group_categories.count > 2 %>
            <span class="px-2 py-0.5 bg-gray-100 text-gray-600 text-xs rounded-full font-medium">
              +<%= space.age_group_categories.count - 2 %>
            </span>
          <% end %>
        </div>
      <% end %>
      
      <p class="text-sm text-gray-600 mb-4">
        <%= truncate(space.description, length: 150) %>
      </p>
      
      <div class="community-card-actions flex justify-between items-center mt-auto">
        <div class="flex items-center space-x-3 text-xs text-gray-500 font-medium">
          <span>
            <%= pluralize(space.memberships.count, 'member') %>
          </span>
          <span>â€¢</span>
          <span>
            <%= pluralize(space.posts.count, 'post') %>
          </span>
        </div>
        
        <%= link_to 'View Space', 
                   space_path(space), 
                   class: 'btn btn-primary btn-sm hover:bg-primary-700 transition-colors', 
                   data: { turbo_frame: "_top" } %>
      </div>
    </div>
  </div>
</div>
