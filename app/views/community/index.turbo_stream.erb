<%# NEW: Proper Turbo Stream infinite scroll implementation %>

<%= turbo_stream.append "spaces_grid" do %>
  <%= render partial: "space_card", collection: @spaces, as: :space %>
<% end %>

<% if @pagy.next %>
  <%= turbo_stream.replace "infinite_scroll_trigger" do %>
    <%= turbo_frame_tag "infinite_scroll_trigger", 
                       src: root_path(page: @pagy.next, 
                                     tab: params[:tab], 
                                     age_group: params[:age_group], 
                                     format: :turbo_stream),
                       loading: :lazy,
                       class: "block py-4" do %>
      <div class="text-center">
        <div class="inline-flex items-center px-4 py-2 text-sm text-gray-600">
          <svg class="animate-spin -ml-1 mr-3 h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Loading more spaces...
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <%# Remove the trigger when no more pages %>
  <%= turbo_stream.remove "infinite_scroll_trigger" %>
  
  <%# Show end of results message %>
  <%= turbo_stream.append "spaces_grid" do %>
    <div class="col-span-full text-center py-8 text-gray-500">
      <div class="inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        You've seen all available spaces
      </div>
    </div>
  <% end %>
<% end %>
