<div class="space-y-3">
  <% if comments.any? %>
    <% comments.each do |comment| %>
      <div class="animate-slide-in rounded-2xl p-4" style="background-color: rgba(189, 214, 69, 0.2);">
        <!-- Header with avatar, name, and timestamp -->
        <div class="flex items-center justify-between mb-3 pb-3" style="border-bottom: 1px solid #5CCBD4;">
          <div class="flex items-center space-x-3">
            <!-- Avatar using Jumpstart helper -->
            <%= user_avatar_tag(comment.user, size: 32, css_class: "w-8 h-8 rounded-full flex-shrink-0") %>
            <!-- Name -->
            <span class="font-semibold text-gray-900 text-sm"><%= comment.user.name %></span>
          </div>
          <!-- Timestamp (right aligned) -->
          <span class="text-xs text-gray-600"><%= time_ago_in_words(comment.created_at) %> ago</span>
        </div>
        
        <!-- Comment content -->
        <div class="text-gray-800 text-sm leading-relaxed ml-11">
          <%= simple_format(comment.content, class: "mb-0") %>
        </div>
        
        <!-- Delete button for own comments -->
        <% if user_signed_in? && comment.user == current_user %>
          <div class="flex justify-end mt-2">
            <%= button_to [comment.post, comment], method: :delete, 
                data: { confirm: 'Are you sure?' }, 
                class: 'text-gray-500 hover:text-red-600 transition-colors duration-200 p-1' do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-8 rounded-2xl" style="background-color: rgba(189, 214, 69, 0.2);">
      <div class="mx-auto w-16 h-16 bg-white bg-opacity-30 rounded-full flex items-center justify-center mb-4">
        <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>
      <h3 class="text-base font-medium text-gray-900 mb-1">No comments yet</h3>
      <p class="text-sm text-gray-700">Be the first to join the conversation!</p>
    </div>
  <% end %>
</div>
