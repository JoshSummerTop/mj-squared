<%= form_with model: (post.persisted? ? post : [space, post]), local: false, html: { multipart: true }, class: "space-y-6" do |f| %>
  <div class="form-group-enhanced">
    <%= f.label :title, class: "form-label-enhanced" %>
    <%= f.text_field :title, 
        placeholder: "What would you like to share?",
        class: "form-input-enhanced #{'border-red-300 focus:ring-red-500 focus:border-red-300' if post.errors[:title].any?}" %>
    <% if post.errors[:title].any? %>
      <p class="mt-1 text-sm text-red-600"><%= post.errors[:title].first %></p>
    <% end %>
  </div>

  <div class="form-group-enhanced">
    <%= f.label :content, class: "form-label-enhanced" %>
    <%= f.text_area :content, rows: 6,
        placeholder: "Share your thoughts with the community...",
        class: "form-textarea-enhanced #{'border-red-300 focus:ring-red-500 focus:border-red-300' if post.errors[:content].any?}" %>
    <% if post.errors[:content].any? %>
      <p class="mt-1 text-sm text-red-600"><%= post.errors[:content].first %></p>
    <% end %>
  </div>

  <div class="form-group-enhanced">
    <%= f.label :image, "Attach Image", class: "form-label-enhanced" %>
    <%= f.file_field :image, accept: "image/jpeg,image/jpg,image/png,image/gif",
        class: "form-file-enhanced #{'border-red-300 focus:ring-red-500 focus:border-red-300' if post.errors[:image].any?}" %>
    <% if post.errors[:image].any? %>
      <p class="mt-1 text-sm text-red-600"><%= post.errors[:image].first %></p>
    <% end %>
    <% if post.persisted? %>
      <% if post.image.attached? %>
        <div class="mt-3">
          <p class="text-sm text-gray-600 mb-2">Current image:</p>
          <%= image_tag post.image, class: 'w-32 h-24 object-cover rounded-lg border' %>
        </div>
      <% end %>
      <p class="text-sm text-gray-500 mt-1">Upload a new image to replace the current one</p>
    <% else %>
      <p class="text-sm text-gray-500 mt-1">Optional: Upload an image (JPEG, PNG, or GIF) to accompany your post</p>
    <% end %>
  </div>

  <% if space&.age_group_categories&.any? %>
    <div class="bg-gray-50 p-4 rounded-lg">
      <p class="text-sm font-medium text-gray-700 mb-2">This post will be visible to:</p>
      <div class="flex flex-wrap gap-2">
        <% space.age_group_categories.each do |age_group| %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary-100 text-secondary-800">
            <%= age_group.name %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="modal-actions flex gap-3 pt-6 mt-8 border-t border-gray-200">
    <%= f.submit (post.persisted? ? "Update Post" : "Create Post"), 
        class: "flex-1 btn-primary-enhanced", 
        data: { disable_with: "Saving..." } %>
    <button type="button" class="flex-1 btn-secondary-enhanced" data-action="modal#close:prevent">
      Cancel
    </button>
  </div>
<% end %>
