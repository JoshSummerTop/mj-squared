<%# Production-grade infinite scroll for posts index %>

<%= turbo_stream.append "posts_content" do %>
  <div class="space-y-6 mt-6">
    <%= render partial: "post_card", collection: @posts, as: :post, locals: { hide_space: @space.present? } %>
  </div>
<% end %>

<% if @pagy.next %>
  <%= turbo_stream.replace "infinite_scroll_trigger" do %>
    <%= turbo_frame_tag "infinite_scroll_trigger", 
                       src: (@space ? space_posts_path(@space, page: @pagy.next, format: :turbo_stream) : posts_path(page: @pagy.next, format: :turbo_stream)),
                       loading: :lazy %>
  <% end %>
<% else %>
  <%# Remove the trigger when no more pages %>
  <%= turbo_stream.remove "infinite_scroll_trigger" %>
  
  <%# Show end of results message %>
  <% if @posts.any? %>
    <%= turbo_stream.append "posts_content" do %>
      <div class="text-center py-6 text-gray-500">
        <div class="inline-flex items-center text-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          You've seen all <%= @space ? "posts in #{@space.title}" : "community posts" %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
