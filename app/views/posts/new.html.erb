<div class="container mx-auto px-4 py-8 max-w-2xl">
  <nav class="text-sm mb-6" aria-label="Breadcrumb">
    <ol class="list-none p-0 m-0 flex text-gray-500">
      <li>
        <%= link_to 'Community', root_path, class: 'hover:underline text-primary-600' %>
      </li>
      <li><span class="mx-2">/</span></li>
      <li>
        <%= link_to @space.title, space_path(@space), class: 'hover:underline text-primary-600' %>
      </li>
      <li><span class="mx-2">/</span></li>
      <li class="text-gray-700">Create Post</li>
    </ol>
  </nav>

  <h1 class="text-3xl font-bold mb-8">Create Post in <%= @space.title %></h1>

  <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
    <%= form_with model: [@space, @post], local: true, html: { multipart: true }, class: "space-y-6" do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :title, required: true, 
            placeholder: "What would you like to share?",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="form-group">
        <%= f.label :content, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :content, required: true, rows: 6,
            placeholder: "Share your thoughts with the community...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="form-group">
        <%= f.label :image, "Attach Image", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.file_field :image, accept: "image/*",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
        <p class="text-sm text-gray-500 mt-1">Optional: Upload an image to accompany your post (JPEG, PNG, or GIF)</p>
      </div>

      <% if @space.age_group_categories.any? %>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm font-medium text-gray-700 mb-2">This post will be visible to:</p>
          <div class="flex flex-wrap gap-2">
            <% @space.age_group_categories.each do |age_group| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-secondary-100 text-secondary-800">
                <%= age_group.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @post.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="text-red-800 text-sm font-medium mb-2">Please fix the following errors:</div>
          <ul class="text-red-700 text-sm list-disc list-inside">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="flex gap-4">
        <%= f.submit "Create Post", class: "flex-1 btn btn-primary" %>
        <%= link_to "Cancel", space_path(@space), class: "flex-1 btn btn-secondary text-center" %>
      </div>
    <% end %>
  </div>
</div>
