<% if membership %>
  <%= button_to 'Leave Space', leave_space_path(space), method: :delete, 
      class: 'btn btn-secondary', 
      data: { 
        confirm: 'Are you sure you want to leave this space?',
        turbo_stream: true 
      } %>
<% else %>
  <%= button_to 'Join Space', join_space_path(space), method: :post, 
      class: 'btn btn-primary',
      data: { turbo_stream: true } %>
<% end %>







