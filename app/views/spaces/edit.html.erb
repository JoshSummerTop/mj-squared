<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold mb-8">Edit Space</h1>

  <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
    <%= form_with model: @space, local: true, html: { multipart: true }, class: "space-y-6" do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :title, required: true, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :description, required: true, rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
      </div>

      <div class="form-group">
        <%= f.label :image, "Space Image", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.file_field :image, accept: "image/*",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
        <p class="text-sm text-gray-500 mt-1">Leave blank to keep current image</p>
        <% if @space.image.attached? %>
          <div class="mt-3">
            <p class="text-sm text-gray-700 mb-2">Current image:</p>
            <%= image_tag @space.image, class: "w-32 h-20 object-cover rounded-lg border border-gray-200" %>
          </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :community_category_ids, "Community Categories", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <p class="text-sm text-gray-500 mb-3">Select at least one category</p>
        <div class="space-y-2">
          <%= f.collection_check_boxes :community_category_ids, CommunityCategory.all, :id, :name do |b| %>
            <div class="flex items-center">
              <%= b.check_box(class: "h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded") %>
              <%= b.label(class: "ml-2 text-sm text-gray-900") %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :age_group_category_ids, "Age Groups", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <p class="text-sm text-gray-500 mb-3">Select at least one age group</p>
        <div class="space-y-2">
          <%= f.collection_check_boxes :age_group_category_ids, AgeGroupCategory.all, :id, :name do |b| %>
            <div class="flex items-center">
              <%= b.check_box(class: "h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded") %>
              <%= b.label(class: "ml-2 text-sm text-gray-900") %>
            </div>
          <% end %>
        </div>
      </div>

      <% if @space.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="text-red-800 text-sm font-medium mb-2">Please fix the following errors:</div>
          <ul class="text-red-700 text-sm list-disc list-inside">
            <% @space.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="flex gap-4">
        <%= f.submit "Update Space", class: "flex-1 btn btn-primary" %>
        <%= link_to "Cancel", @space, class: "flex-1 btn btn-secondary text-center" %>
      </div>
    <% end %>
  </div>
</div>






