<%# Modal form content for spaces/edit - loaded into dialog turbo_frame %>
<%= turbo_frame_tag "modal" do %>
  <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
    <!-- Modal Header -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <div>
        <h2 class="text-xl font-semibold text-gray-900">Edit Space</h2>
        <p class="text-sm text-gray-600 mt-1">Update your community space settings</p>
      </div>
      <button type="button" 
              data-action="dialog#close" 
              class="text-gray-400 hover:text-gray-600 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="p-6">
      <%= form_with model: @space, 
                    local: false,
                    class: "space-y-6" do |f| %>
        
        <!-- Validation Errors Summary -->
        <% if @space.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% if @space.errors[:title].any? %>
                    <li>Title can't be blank</li>
                  <% end %>
                  <% if @space.errors[:description].any? %>
                    <li>Description can't be blank</li>
                  <% end %>
                  <% if @space.errors[:community_categories].any? %>
                    <li>Community categories must select at least one community category</li>
                  <% end %>
                  <% if @space.errors[:age_group_categories].any? %>
                    <li>Age group categories must select at least one age group</li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
        
        <!-- Title Field -->
        <div>
          <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :title, 
                          placeholder: "What's your space about?",
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 #{'border-red-500' if @space.errors[:title].any?}" %>
        </div>

        <!-- Description Field -->
        <div>
          <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description, 
                         placeholder: "Describe your space and what conversations you'd like to have...",
                         rows: 4,
                         class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 #{'border-red-500' if @space.errors[:description].any?}" %>
        </div>

        <!-- Image Field -->
        <div>
          <%= f.label :image, "Space Image", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.file_field :image, accept: "image/*",
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
          <p class="text-sm text-gray-500 mt-1">Leave blank to keep current image</p>
          <%# TEMPORARILY DISABLED FOR FASTER LOADING %>
          <%# if @space.image.attached? %>
            <%# <div class="mt-3"> %>
              <%# <p class="text-sm text-gray-700 mb-2">Current image:</p> %>
              <%#= image_tag @space.image, class: "w-32 h-20 object-cover rounded-lg border border-gray-200" %>
            <%# </div> %>
          <%# end %>
        </div>

        <!-- Community Categories -->
        <div>
          <%= f.label :community_category_ids, "Community Categories", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <p class="text-sm text-gray-500 mb-3">Select at least one category</p>
          <div class="grid grid-cols-2 gap-3 max-h-32 overflow-y-auto border rounded-lg p-3 #{@space.errors[:community_categories].any? ? 'border-red-500 bg-red-50' : 'border-gray-300 bg-gray-50'}" style="<%= @space.errors[:community_categories].any? ? 'border: 1px solid red !important; background-color: #fef2f2 !important;' : '' %>">
            <%= f.collection_check_boxes :community_category_ids, CommunityCategory.all, :id, :name do |b| %>
              <label class="flex items-center cursor-pointer">
                <%= b.check_box(class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded") %>
                <span class="ml-2 text-sm text-gray-900"><%= b.text %></span>
              </label>
            <% end %>
          </div>
        </div>

        <!-- Age Groups -->
        <div>
          <%= f.label :age_group_category_ids, "Age Groups", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <p class="text-sm text-gray-500 mb-3">Select target age groups</p>
          <div class="grid grid-cols-2 gap-3 max-h-32 overflow-y-auto border rounded-lg p-3 #{@space.errors[:age_group_categories].any? ? 'border-red-500 bg-red-50' : 'border-gray-300 bg-gray-50'}" style="<%= @space.errors[:age_group_categories].any? ? 'border: 1px solid red !important; background-color: #fef2f2 !important;' : '' %>">
            <%= f.collection_check_boxes :age_group_category_ids, AgeGroupCategory.all, :id, :name do |b| %>
              <label class="flex items-center cursor-pointer">
                <%= b.check_box(class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded") %>
                <span class="ml-2 text-sm text-gray-900"><%= b.text %></span>
              </label>
            <% end %>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end gap-3 pt-6 border-t border-gray-200">
          <button type="button" 
                  data-action="dialog#close"
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary-500">
            Cancel
          </button>
          <%= f.submit "Update Space", 
                      class: "px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500",
                      data: { disable_with: "Updating..." } %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
