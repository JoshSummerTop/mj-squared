<div class="w-full max-w-md p-8 bg-white border border-gray-200 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-50 rounded-xl shadow-lg hover:shadow-xl hover:scale-[1.02] transition-all duration-300 group">
  <!-- Plan Name -->
  <h4 class="mb-6 text-2xl font-bold text-gray-900 dark:text-gray-100" style="font-family: 'Paytone One', sans-serif;"><%= plan.name %></h4>

  <!-- Price Section -->
  <div class="mb-6">
    <% if plan.contact_url? %>
      <span class="text-5xl font-bold text-gray-900 dark:text-gray-100"><%= t(".contact_us_price") %></span>
    <% else %>
      <span class="text-5xl font-bold text-gray-900 dark:text-gray-100"><%= pay_amount_to_currency(plan, strip_insignificant_zeros: true) %></span>
      <span class="text-lg text-gray-600 dark:text-gray-400 font-medium">
        <% if plan.unit_label? %>/ <%= plan.unit_label %><% end %>
          / <%= formatted_plan_interval(plan) %>
      </span>
    <% end %>
  </div>

  <!-- Description -->
  <p class="mb-8 text-gray-600 dark:text-gray-400 text-lg leading-relaxed"><%= plan.description %></p>

  <!-- Features List -->
  <div class="mb-8 space-y-4">
    <% plan.features.each do |plan_feature| %>
      <div class="flex items-start">
        <svg xmlns="http://www.w3.org/2000/svg" class="shrink-0 mr-3 text-primary-500 h-5 w-5 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <div class="text-gray-700 dark:text-gray-300 leading-relaxed"><%= plan_feature %></div>
      </div>
    <% end %>
  </div>

  <!-- Action Button -->
  <div class="mt-auto">
    <%= yield %>
  </div>
</div>
