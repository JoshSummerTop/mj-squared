<div class="container px-4 mx-auto my-10 lg:px-0">
  <div class="w-full max-w-4xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4" style="font-family: 'Paytone One', sans-serif;"><%= t(".heading") %></h1>
      <p class="text-xl text-gray-600 dark:text-gray-400"><%= t(".subhead") %></p>
    </div>

    <!-- Pricing Toggle -->
    <div data-controller="pricing"
         data-pricing-active-frequency-class="bg-primary-600 text-white shadow-lg"
         data-pricing-inactive-frequency-class="bg-white text-gray-700 hover:text-gray-900 border border-gray-300 hover:border-gray-400"
         data-pricing-inactive-plans-class="hidden"
         data-pricing-hidden-toggle-class="hidden"
         class="flex flex-wrap items-center justify-center mb-12">
      <div data-pricing-target="toggle" class="hidden relative self-center bg-gray-200 dark:bg-gray-700 rounded-full p-1 flex">
        <button type="button" data-action="pricing#switch" data-pricing-target="frequency" data-frequency="monthly" class="relative w-1/2 border border-transparent rounded-full py-2 px-6 text-sm font-medium whitespace-nowrap focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-all duration-200 sm:w-auto sm:px-8"><%= t('.monthly') %></button>
        <button type="button" data-action="pricing#switch" data-pricing-target="frequency" data-frequency="yearly" class="ml-0.5 relative w-1/2 border border-transparent rounded-full py-2 px-6 text-sm font-medium whitespace-nowrap focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-all duration-200 sm:w-auto sm:px-8"><%= t('.yearly') %></button>
      </div>
    </div>

    <!-- Pricing Plans -->
    <div data-turbo-prefetch="false" class="w-full">
      <div data-pricing-target="plans" data-frequency="monthly" class="flex flex-wrap items-center justify-center gap-8">
        <% @monthly_plans.each do |plan| %>
          <%= render layout: "billing/subscriptions/plan", locals: { plan: plan } do %>
            <%= pricing_link_to(plan) %>
          <% end %>
        <% end %>
      </div>
      <div data-pricing-target="plans" data-frequency="yearly" class="hidden flex flex-wrap items-center justify-center gap-8">
        <% @yearly_plans.each do |plan| %>
          <%= render layout: "billing/subscriptions/plan", locals: { plan: plan } do %>
            <%= pricing_link_to(plan) %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
